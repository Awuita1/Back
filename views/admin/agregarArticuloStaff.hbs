<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar un nuevo miembro</h4>
            <form action="/admin/staff/agregarArticuloStaff" method="post" enctype="multipart/form-data">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Apellido" name="apellido">
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Nombre" name="nombre"></textarea>
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Cargo" name="cargo"></textarea>
                </div>
                <div class="form-group">
                    <label>Seleccionar imagen: <input type="file" class="form-control" name="imgen" id="imagen"></label>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
        </div>
    </div>
</div>
{{#if error}}
    <h5>{{message}}</h5>
{{/if}}
