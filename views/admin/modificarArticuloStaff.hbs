<div class="container" style="margin: 50px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar miembro del staff</h4>
            <form method="post" action="/admin/staff/modificarArticulostaff" enctype="multipart/form-data">
                <input type="hidden" value="{{articulo.id}}" name="id">
                <div class="mb-3 row">
                    <label for="">Apellido</label>
                    <input type="text" class="form-control" name="apellido" value="{{articulo.apellido}}">
                </div>
                <div class="mb-3 row">
                    <label for="">Nombre</label>
                    <input type="text" class="form-control" name="nombre" value="{{articulo.nombre}}">
                </div>
                <div class="mb-3 row">
                    <label for="">Carrgo</label>
                    <textarea name="cargo" class="form-control">{{articulo.cargo}}</textarea>
                </div>
                <div class="mb-3 row">
                    <p>
                        <label>Imagen: <input type="file" class="form-control" name="imagen" id="imagen"></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="image_delete" value="1">Eliminar imagen
                            actual?</label>
                        <input type="hidden" name="img_original" value="{{articulo.img_id}}">
                    </p>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
        </div>
    </div>
</div>
{{#if error}}
<h5>{{message}}</h5>
{{/if}}