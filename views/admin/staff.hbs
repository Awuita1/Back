<div class="container" style="margin-top: 50px;">
            <div class="col-7">
            <a href="/admin" class="btn btn-danger"><i class="fa-solid fa-left-long"></i></i>Volver</a>
        </div>
    <div class="row">
        <p class="text-end">
            Hola {{usuario}}! <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesi√≥n <i
                    class="fas fa-sign-out-alt"></i></a>
        </p>
    </div>
    <div class="row">

        <div class="col-7">
            <h3>Staff</h3>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/staff/agregarArticuloStaff" class="btn btn-success"><i class="fa fa-plus"
                    aria-hidden="true"></i> Nuevo</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Imagen</th>
                        <th scope="col">Cargo</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each articulos}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{apellido}}</td>
                        <td>{{{imagen}}}</td>
                        <td>{{cargo}}</td>
                        <td class="text-end">
                            <a class="btn btn-secondary" href="/admin/staff/modificarArticuloStaff/{{id}}"><i
                                    class="fa fa-pencil" aria-hidden="true"></i></a>
                            <a class="btn btn-secondary" href="/admin/staff/eliminar/{{id}}"><i class="fa fa-trash"
                                    aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>